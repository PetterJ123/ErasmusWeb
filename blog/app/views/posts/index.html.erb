<%= render "partials/meny" %>
<article class="col-md-10 col-lg-10">

      <div class="row" id="infofield">
        <nav id="xl-infonav" class="hidden-xs hidden-sm">
            <h3 class="page">Posts</h3>
            <div id="searchfield"><img id="searchicon" src="/assets/searchicon.png">
            <h3 id="search">Search</h3></div>
        </nav>
          
        <nav id="xs-infonav" class="hidden-md hidden-lg">
          <img id="burgermeny" src="" alt="â‰¡">
          <h3 class="page">Posts</h3>

          <div id="searchfield">
            <img id="searchicon" src="/assets/searchiconxs.png">
            <h3 id="search">Search</h3>
          </div>
        </nav>
      </div>

        <div class="row" id="main">
            <!--<p id="notice"><#%= notice %></p>-->
            <div class="container" id="tableCont">
                <table id="postlist">
                        <% @posts.each do |post| %>
                        <tr class="postrow">
                            <td class="postcontent">
                                <strong><%= post.head %></strong><br><br>
                                <%= post.content %>
                            </td>
                            <td class="postinfo">
                                <%= post.user.email %><br>
                                <%= link_to 'Show', post %><br>        
                            
                                <% if post.user == current_user %>
                                <%= link_to 'Edit', edit_post_path(post) %><br>
                                <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
                                <% end %>
                            </td>
                        </tr>
                        <% end %>
                </table>
                <%= link_to 'New Post', new_post_path %>
            </div>
        </div>
        <%= render "partials/footer" %>
    </div> 
</article>