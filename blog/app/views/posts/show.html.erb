<article>
    <div class="container">
        <%= render "partials/header" %>

        <div class="row" id="infofield">
	        <nav id="infonav">
	        	<h3 class="page">You are on the Index-page</h3>
	        	<div id="searchfield"><img id="searchicon" src="/assets/searchicon.png">
	        	<h3 id="search">Search</h3></div>
	        </nav>	
	    </div>

	    <div class="row" id="main">
	    	<p id="notice"><%= notice %></p>

			<p>
			  <strong>Head:</strong>
			  <%= @post.head %>
			</p>

			<p>
			  <strong>Content:</strong>
			  <%= @post.content %>
			</p>

			<%= link_to 'Edit', edit_post_path(@post) %> |
			<%= link_to 'Back', posts_path %>
	    </div>
    </div> 
</article>